<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.HappyApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".profile.FAQsActivity"
            android:exported="false" />
        <activity
            android:name=".profile.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".profile.SendUsActivity"
            android:exported="false" />
        <activity
            android:name=".profile.PrivacySettingActivity"
            android:exported="false" />
        <activity
            android:name=".profile.NotificationSettingActivity"
            android:exported="false" />
        <activity
            android:name=".profile.ProfileSettingActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.FillNewPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.VerifyOtpForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.FillEmailForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.VerifyOtpSignupActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.SigninActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>